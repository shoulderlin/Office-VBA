Sub 編表格序號()
Dim oRow As Row
On Error GoTo Err

sn = 1
errtag = 0
For i = 2 To ActiveDocument.Tables.Item(1).Rows.Count
    ActiveDocument.Tables.Item(1).Cell(i, 1).Select
    If errtag <> 1 Then
        Selection.TypeText Text:=sn
        sn = sn + 1
    End If
    errtag = 0
Next

Err:
errtag = 1
Resume Next
End Sub
